---
import RowIcon from "../icons/RowIcon.astro";
interface Props {
  title: string;
  description: string;
  image: string;
  href?: string;
  technologies?: string[];
}

const { title, description, image, href = "", technologies = [] } = Astro.props;
const showHref = href.length > 0;
---

<article
  class="group relative grid gap-4 pb-1 transition-all sm:grid-cols-8 sm:gap-8 md:gap-4 lg:hover:!opacity-100 lg:group-hover/list:opacity-50 mb-14"
>
  <div
    class="absolute -inset-x-4 -inset-y-4 z-0 hidden rounded-md transition motion-reduce:transition-none lg:-inset-x-6 lg:block lg:group-hover:bg-slate-800/50 lg:group-hover:shadow-[inset_0_1px_0_0_rgba(148,163,184,0.1)] lg:group-hover:drop-shadow-lg"
  >
  </div><div class="z-10 sm:order-2 sm:col-span-6">
    <h2>
      {
        showHref ? (
          <a
            class="text-2xl inline-flex items-baseline font-medium leading-tight text-slate-200 hover:text-teal-300 focus-visible:text-teal-300 group/link"
            href={href}
            target="_blank"
            rel="noreferrer noopener"
          >
            <span>
              {title} <RowIcon />{" "}
            </span>
          </a>
        ) : (
          <span class="text-2xl">{title}</span>
        )
      }
    </h2>
    <p class="mt-2 text-sm leading-normal" style="text-wrap: balance;">
      {description}
    </p>
    <ul class="mt-2 flex flex-wrap" aria-label="Technologies used:">
      {
        technologies.map((tech) => (
          <li class="mr-1.5 mt-2">
            <div class="flex items-center rounded-full bg-teal-400/10 px-3 py-1 text-xs font-medium leading-5 text-teal-300">
              {tech}
            </div>
          </li>
        ))
      }
    </ul>
  </div>
  <img
    alt={title}
    loading="lazy"
    width="200"
    height="48"
    decoding="async"
    class="rounded border-2 border-slate-200/10 transition group-hover:border-slate-200/30 sm:order-1 sm:col-span-2 sm:translate-y-1"
    src={image}
  />
</article>
